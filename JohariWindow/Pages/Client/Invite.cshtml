@page "{clientID}"
@model JohariWindow.Pages.Client.InviteModel
@{
    ViewData["Title"] = "Invite Users";
}
<form method="post" asp-action="Index">
    <div class="container">
        <input type="hidden" asp-for="@Model.ClientID" />
        <div class="row">
            <h2 class="border-bottom">Invite Friends/Family</h2>
            <div class="col-12">
                Invite friends and family to say which traits they see in you. This will help fill out your Johari Window and analyze the results about the types of
                self you have.
            </div>
        </div>
        <div id="emailList">
            <div class="form-group row my-4">
                <div class="col-auto">
                    <label>Friend 1</label>
                </div>
                <div class="col-5">
                    <input type="email" required class="form-control" name="emails[0]" />
                </div>
            </div>
            <div class="form-group row my-4">
                <div class="col-auto">
                    <label>Friend 2</label>
                </div>
                <div class="col-5">
                    <input type="email" required class="form-control" name="emails[1]" />
                </div>
            </div>
            <div class="form-group row my-4">
                <div class="col-auto">
                    <label>Friend 3</label>
                </div>
                <div class="col-5">
                    <input type="email" required class="form-control" name="emails[2]" />
                </div>
            </div>
            <div class="form-group row my-4">
                <div class="col-auto">
                    <label>Friend 4</label>
                </div>
                <div class="col-5">
                    <input type="email" required class="form-control" name="emails[3]" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-success">Send Invites</button>
            </div>
        </div>
    </div>
</form>